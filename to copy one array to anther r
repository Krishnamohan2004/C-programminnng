#include <stdio.h>

#define MAX_SIZE 100

int main() {
    int arr1[MAX_SIZE], arr2[MAX_SIZE];
    int size, i;

    printf("Enter the size of the array: ");
    scanf("%d", &size);

    printf("Enter elements of array 1:\n");
    for (i = 0; i < size; i++) {
        scanf("%d", &arr1[i]);
        arr2[i] = arr1[i];
    }

    printf("\nElements of array 1: ");
    for (i = 0; i < size; i++) {
        printf("%d ", arr1[i]);
    }

    printf("\nElements of array 2 (copy of array 1): ");
    for (i = 0; i < size; i++) {
        printf("%d ", arr2[i]);
    }
    printf("\n");

    return 0;
}
